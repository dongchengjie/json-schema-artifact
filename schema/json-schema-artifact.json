{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/dongchengjie/json-schema-artifact/json-schema-artifact.json",
  "description": "json-schema-artifact Configuration Schema",
  "type": "object",
  "additionalProperties": true,
  "required": ["build"],
  "properties": {
    "watch": {
      "description": "directories or files to watch",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["dir"],
            "properties": {
              "dir": { "description": "directory to watch", "type": "string", "minLength": 1 },
              "recursive": {
                "description": "recursively watch subdirectories",
                "type": "boolean",
                "default": true
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["file"],
            "properties": {
              "file": { "description": "file to watch", "type": "string", "minLength": 1 }
            }
          }
        ]
      }
    },
    "build": {
      "description": "build settings",
      "type": "object",
      "additionalProperties": false,
      "required": ["target"],
      "properties": {
        "target": {
          "description": "target to build",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["input", "output"],
            "properties": {
              "input": { "description": "JSON Schema input", "type": "string", "minLength": 1 },
              "output": { "description": "JSON Schema output", "type": "string", "minLength": 1 },
              "locale": {
                "description": "locale for translation",
                "type": "object",
                "additionalProperties": {
                  "description": "locale file location",
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        },
        "optimize": {
          "description": "optimization settings",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "refsDerefer": {
              "description": "indirect refs dereference",
              "type": "boolean",
              "default": true
            },
            "format": {
              "type": "string",
              "description": "output format",
              "enum": ["minify", "pretty"],
              "examples": ["minify", "pretty"],
              "default": "minify"
            }
          }
        }
      }
    }
  }
}
